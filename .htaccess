# TechPulse Daily - Cloudways Production Configuration
# Simplified proxy configuration for Apache

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Proxy all requests to Node.js app on port 3000
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ http://localhost:3000/$1 [P,L]
</IfModule>

# Fallback if mod_rewrite isn't available
<IfModule !mod_rewrite.c>
    ErrorDocument 503 "Node.js application requires mod_rewrite and mod_proxy"
</IfModule>